<%- include('template/header', {tituloweb: "Pagina de Servicios" }); %>
  <%- include('template/aside'); %>
    <div class="content-wrapper">
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>SERVICIOS</h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                <li class="breadcrumb-item active">Servicios</li>
              </ol>
            </div>
          </div>
        </div>
      </section>
      <section class="content">
        <div class="card">
          <div class="card-header">
            <a href="servicios/crearser" class="btn btn-success my-2">Crear servicio</a>
            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                <i class="fas fa-minus"></i>
              </button>
            </div>
          </div>
          <div class="card-body">
            <div class="container">
              <h1>Nuestros Servicios</h1>
              <% if (arrayServicios.length> 0) { %>
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">Id</th>
                      <th scope="col">Servicio</th>
                      <th scope="col">Descripcion</th>
                      <th scope="col">Accion</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% arrayServicios.forEach(servicio=> { %>
                      <tr>
                        <th scope="row">
                          <%= servicio.id %>
                        </th>
                        <td>
                          <%= servicio.servicio %>
                        </td>
                        <td>
                          <%= servicio.descripcion %>
                        </td>
                        <td>
                          <a href="servicios/<%= servicio.id %>" class="btn btn-warning btn-sm">Editar</a>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
                <% } %>
            </div>
          </div>
        </div>
      </section>
    </div>
    <%- include('template/footer'); %>