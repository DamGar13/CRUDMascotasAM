<%- include('template/header', {tituloweb: "Pagina de Mascotas"}); %>
    
    <div class="container">
      <h1>CRUD con MongoDB</h1>
        <% if (arrayMascotas.length > 0) { %>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Mascota</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Accion</th>
                  </tr>
                </thead>
                <tbody>
                    <% arrayMascotas.forEach(mascota => { %>
                        <tr>
                            <th scope="row"><%= mascota.id %></th>
                            <td><%= mascota.nombre %></td>
                            <td><%= mascota.descripcion %></td>
                            <td>
                              <a href="mascotas/<%= mascota.id %>" class="btn btn-warning btn-sm">Editar</a>
                            </td>
                          </tr>   
                    <% }) %>
                </tbody>
              </table>
        <% } %>
      <a href="mascotas/crear" class="btn btn-success my-2">Crear mascotas</a>
    </div>

<%- include('template/footer'); %>